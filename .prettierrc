{
    "arrowParens": "always",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true,
    "plugins": [
        "prettier-plugin-tailwindcss",
        "@shufo/prettier-plugin-blade"
    ],
    "tailwindStylesheet": "./resources/css/filament/admin/theme.css",
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "tabWidth": 4
            }
        }
    ]
}
